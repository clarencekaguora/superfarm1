<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.superfarm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.superfarm.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.superfarm.FarmHub"
            android:label="@string/title_activity_farm_hub" >
        </activity>
        <activity
            android:name="com.example.superfarm.FarmBook"
            android:label="@string/title_activity_farm_book" >
        </activity>
        <activity
            android:name="com.example.superfarm.OrderActivity"
            android:label="@string/title_activity_order" >
        </activity>
        <activity
            android:name="com.example.superfarm.Recordkeeping"
            android:label="@string/title_activity_recordkeeping" >
        </activity>
        <activity
            android:name="com.example.superfarm.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.example.superfarm.SmsProvider"
            android:label="@string/title_activity_sms_provider" >
        </activity>
    </application>

</manifest>